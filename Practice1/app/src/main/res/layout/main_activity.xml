<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cat_image"
        android:src="@drawable/cat"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cat_image"
        android:text="귀여운 고양이를 키워보세요"
        style="@android:style/TextAppearance.Large"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="24dp">
    </TextView>

    <ImageView
        android:id="@+id/phone_icon"
        android:src="@drawable/local_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/phone_icon"
        android:text="010-7484-1537"
        style="@android:style/TextAppearance.Medium"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="8dp">

    </TextView>

    <ImageView
        android:id="@+id/location_icon"
        android:src="@drawable/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_icon"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_icon"
        android:layout_toRightOf="@id/location_icon"
        android:text="우리 집"
        style="@android:style/TextAppearance.Medium"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="8dp">
    </TextView>

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_icon"
        android:text="고양이의 효능"
        style="@android:style/TextAppearance.Large"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="24dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title2"

        android:text="동의보감에 따르면 고양이 고기는 여러 효능이 있습니다. 관절염, 폐병, 신장병, 담, 치루 등 여러 병에 효과가 있습니다. "
        style="@android:style/TextAppearance.Small"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

    </TextView>

</RelativeLayout>